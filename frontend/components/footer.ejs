
<footer class="text-gray-400 h-12 text-sm p-4 text-center mt-auto border-t border-[#2a2a2a] w-full">
  <p>
    &copy; <%= new Date().getFullYear() %> 
    <a href="https://github.com/HydrenFOSS/Ploxora" class="text-gray-300 hover:text-white" target="_blank">
      Ploxora
    </a>. All rights reserved. 
    <span id="ploxora-version">Version: Loading...</span>
  </p>
</footer>

<script>
  async function fetchPloxoraVersion() {
    try {
      const response = await fetch('https://ma4z.pages.dev/repo/version_library.json');
      const data = await response.json();
      const latestVersion = data['hydren:stable']['ploxora']['versions']['latest'];
      document.getElementById('ploxora-version').textContent = `Version: ${latestVersion}`;
    } catch (err) {
      console.error('Failed to fetch Ploxora version:', err);
      document.getElementById('ploxora-version').textContent = 'Version: Unknown';
    }
  }

  fetchPloxoraVersion();
</script>
