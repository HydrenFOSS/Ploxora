<!DOCTYPE html>
<html lang="en">
<%- include('components/head') %>
<body class="bg-neutral-900 text-gray-300 font-[Figtree] min-h-screen flex">

  <!-- Sidebar -->
  <%- include('components/sidebar.ejs') %>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col">
    <!-- Navbar -->
    <%- include('components/nav.ejs') %>

    <!-- Dashboard Content -->
    <main class="p-6 grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Overview Cards -->
      <div class="bg-neutral-800 rounded-2xl p-6 shadow-lg border border-[#2a2a2a]">
        <h3 class="text-sm text-gray-400 mb-2">Total Servers</h3>
        <p class="text-2xl font-bold text-gray-200"><%= user.servers?.length || 0 %></p>
      </div>
      <div class="bg-neutral-800 rounded-2xl p-6 shadow-lg border border-[#2a2a2a]">
        <h3 class="text-sm text-gray-400 mb-2">Account Type</h3>
        <p class="text-2xl font-bold text-gray-200"><%= user.admin ? "Admin" : "User" %></p>
      </div>
      <div class="bg-neutral-800 rounded-2xl p-6 shadow-lg border border-[#2a2a2a]">
        <h3 class="text-sm text-gray-400 mb-2">Total Nodes</h3>
        <p class="text-2xl font-bold text-gray-200"><%= nodes %></p>
      </div>

      <!-- Servers Table -->
      <div class="bg-neutral-800 rounded-2xl p-6 shadow-lg border border-[#2a2a2a] col-span-1 md:col-span-3 overflow-x-auto">
        <h3 class="text-xl font-semibold text-white mb-4">Your Servers</h3>
        <table class="w-full text-left border-collapse">
          <thead>
            <tr class="bg-neutral-900 text-gray-300 text-sm uppercase tracking-wide">
              <th class="px-4 py-3 rounded-l-lg">Server Name</th>
              <th class="px-4 py-3">SSH</th>
              <th class="px-4 py-3 rounded-r-lg">Created At</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-neutral-700 text-gray-400">
            <% if (user.servers && user.servers.length > 0) { %>
              <% user.servers.forEach((server, index) => { %>
                <tr class="hover:bg-neutral-850 transition">
                  <td class="px-4 py-3 font-medium text-gray-200"><%= server.name || "Empty" %></td>
                  <td class="px-4 py-3 text-gray-300"><%= (server.ssh ? server.ssh.replace(/^ssh session:\s*/i, '') : "N/A") %></td>
                  <td class="px-4 py-3 text-gray-400"><%= server.createdAt || "Now" %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="3" class="text-center px-6 py-6 text-gray-500 italic">
                  No servers yet.
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <script>lucide.createIcons();</script>
</body>
</html>
