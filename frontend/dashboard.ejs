<!DOCTYPE html>
<html lang="en">
<%- include('components/head') %>
<body class="min-h-screen text-white relative flex flex-col">

  <div class="absolute inset-0 flex flex-col">
  <!-- Top gradient -->
  <div class="h-1/2 bg-gradient-to-b from-[#000000] to-[#111111]"></div>
  <!-- Bottom gradient -->
  <div class="h-1/2 bg-gradient-to-b from-[#111111] to-[#000000]"></div>
</div>
  <!-- Navbar -->
<%- include('components/nav.ejs') %>

  <div class="flex flex-1 relative z-10">

   <%- include('components/sidebar.ejs') %>
<!-- Main content -->
<main class="flex-1 p-6 space-y-8">

  <!-- Greeting -->
  <div class="bg-neutral-950 p-6 rounded-2xl shadow-lg border border-[#2a2a2a]">
    <h1 class="text-3xl font-bold text-gray-100">Welcome back, <%= user.username %> ðŸ‘‹</h1>
    <p class="text-gray-400 mt-2">Hereâ€™s a quick overview of your account and servers.</p>
  </div>

  <!-- Overview cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="bg-neutral-950 p-5 rounded-2xl shadow-lg border border-[#2a2a2a]">
      <h3 class="text-sm text-gray-400 mb-2">Total Servers</h3>
      <p class="text-2xl font-bold text-gray-200"><%= user.servers?.length || 0 %></p>
    </div>
    <div class="bg-neutral-950 p-5 rounded-2xl shadow-lg border border-[#2a2a2a]">
      <h3 class="text-sm text-gray-400 mb-2">Account Type</h3>
      <p class="text-2xl font-bold text-gray-200"><%= user.admin ? "Admin" : "User" %></p>
    </div>
    <div class="bg-neutral-950 p-5 rounded-2xl shadow-lg border border-[#2a2a2a]">
      <h3 class="text-sm text-gray-400 mb-2">Total Nodes</h3>
      <p class="text-2xl font-bold text-gray-200"><%= nodes %></p>
    </div>
  </div>

  <!-- Servers Table -->
  <section>
    <h2 class="text-2xl font-semibold mb-4 text-gray-200 tracking-wide">Your Servers</h2>
    <div class="overflow-x-auto rounded-2xl shadow-lg border border-[#2a2a2a]">
      <table class="min-w-full bg-neutral-950 rounded-2xl overflow-hidden">
        <thead>
          <tr class="bg-neutral-950 text-left text-gray-300 text-sm uppercase tracking-wide">
            <th class="px-6 py-3">Server Name</th>
            <th class="px-6 py-3">SSH</th>
            <th class="px-6 py-3">Created At</th>
          </tr>
        </thead>
        <tbody>
          <% if (user.servers && user.servers.length > 0) { %>
            <% user.servers.forEach((server, index) => { %>
              <tr class="transition hover:bg-neutral-800 <%= index % 2 === 0 ? 'bg-stone-950' : 'bg-stone-950' %>">
                <td class="px-6 py-3 font-medium text-gray-200"><%= server.name || "Empty" %></td>
                <td class="px-6 py-3 text-gray-300">  <%= (server.ssh ? server.ssh.replace(/^ssh session:\s*/i, '') : "N/A") %>
</td>
                <td class="px-6 py-3 text-gray-400"><%= server.createdAt || "Now" %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center px-6 py-6 text-gray-500 italic">
                No servers yet.
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </section>

</main>


  </div>

 <%- include('components/footer.ejs') %>

</body>
</html>
