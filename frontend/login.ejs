<!DOCTYPE html>
<html lang="en">
<%- include('components/head') %>
<body class="flex items-center justify-center min-h-screen bg-neutral-900 text-gray-300 font-[Figtree]">

  <!-- Login box -->
  <div class="bg-neutral-800 border border-[#2a2a2a] p-10 rounded-2xl shadow-lg w-96 text-center">
    <div class="mb-6">
      <img src="/uploads/logo.png" alt="Logo" class="h-12 mx-auto mb-2">
      <h1 class="text-2xl font-bold text-white">Welcome Back!</h1>
      <p class="text-gray-400">Login to <%= name %></p>
    </div>

    <% if (error) { %>
      <p id="error-msg" class="text-red-500 mb-4 font-semibold"><%= error %></p>
    <% } %>

    <!-- Username/Password form -->
    <form action="/login" method="POST" class="space-y-4 text-left mb-6">
      <div>
        <label for="email" class="block text-gray-400 text-sm mb-1">Email</label>
        <input type="text" id="email" name="email" required
          class="w-full px-4 py-2 rounded-xl bg-neutral-900 border border-[#2a2a2a] text-white focus:outline-none focus:border-neutral-600">
      </div>

      <div>
        <label for="password" class="block text-gray-400 text-sm mb-1">Password</label>
        <input type="password" id="password" name="password" required
          class="w-full px-4 py-2 rounded-xl bg-neutral-900 border border-[#2a2a2a] text-white focus:outline-none focus:border-neutral-600">
      </div>

      <button type="submit"
        class="w-full bg-neutral-700 hover:bg-neutral-600 text-white font-semibold rounded-xl py-3 transition">
        Login
      </button>
    </form>

    <!-- Divider -->
    <div class="flex items-center my-4">
      <div class="flex-grow border-t border-neutral-700"></div>
      <span class="px-3 text-gray-500 text-sm">OR</span>
      <div class="flex-grow border-t border-neutral-700"></div>
    </div>

    <!-- Discord login -->
    <a href="/auth/discord"
      class="flex items-center justify-center bg-[#5865F2] hover:bg-[#4752C4] font-semibold rounded-xl px-6 py-3 text-white transition">
      <img src="https://cdn-icons-png.flaticon.com/512/2111/2111370.png" alt="Discord" class="w-6 h-6 mr-3">
      Sign In/Up with Discord
    </a>

    <!-- Register link -->
    <p class="text-gray-400 text-sm mt-6">
      Donâ€™t have an account? 
      <a href="/register" class="text-white font-semibold hover:underline">Register</a>
    </p>
  </div>
</body>
</html>
