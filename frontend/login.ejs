<!DOCTYPE html>
<html lang="en">
<%- include('components/head') %>
<style>
  /* subtle glow on hover */
  .discord-btn:hover {
    box-shadow: 0 0 20px rgba(88, 101, 242, 0.8);
  }
  .input-field:focus {
    box-shadow: 0 0 10px rgba(88, 101, 242, 0.6);
    border-color: #5865F2;
  }
</style>
<body class="flex items-center justify-center min-h-screen relative overflow-hidden bg-black">

<div class="absolute inset-0 flex flex-col">
  <!-- Top gradient -->
  <div class="h-1/2 bg-gradient-to-b from-[#000000] to-[#111111]"></div>
  <!-- Bottom gradient -->
  <div class="h-1/2 bg-gradient-to-b from-[#111111] to-[#000000]"></div>
</div>

<!-- login box -->
<div class="relative bg-[#0b0b0b]/95 p-12 rounded-3xl shadow-2xl w-96 text-center">
  <h1 class="text-white text-4xl font-bold mb-4">Welcome Back!</h1>
  <p class="text-white/70 mb-8">Login to <%= name %></p>

  <% if (error) { %>
    <p id="error-msg" class="text-red-500 mb-4 font-semibold"><%= error %></p>
  <% } %>

  <!-- Username/Password form -->
  <form action="/login" method="POST" class="space-y-4 text-left mb-6">
    <div>
      <label for="email" class="block text-white/70 text-sm mb-1">Email</label>
      <input type="text" id="email" name="email" required
        class="input-field w-full px-4 py-2 rounded-xl bg-[#111111] border border-[#222222] text-white focus:outline-none">
    </div>

    <div>
      <label for="password" class="block text-white/70 text-sm mb-1">Password</label>
      <input type="password" id="password" name="password" required
        class="input-field w-full px-4 py-2 rounded-xl bg-[#111111] border border-[#222222] text-white focus:outline-none">
    </div>

    <button type="submit"
      class="w-full bg-[#5865F2] text-white font-semibold rounded-xl py-3 hover:bg-[#4752C4] transition">
      Login
    </button>
  </form>

  <!-- Divider -->
  <div class="flex items-center my-4">
    <div class="flex-grow border-t border-white/20"></div>
    <span class="px-3 text-white/50 text-sm">OR</span>
    <div class="flex-grow border-t border-white/20"></div>
  </div>

  <!-- Discord login -->
  <a href="/auth/discord"
     class="discord-btn flex items-center justify-center bg-[#7289DA] font-semibold rounded-2xl px-8 py-3 text-white transition duration-300">
     <img src="https://cdn-icons-png.flaticon.com/512/2111/2111370.png" 
          alt="Discord" class="w-6 h-6 mr-3">
     Sign In/Up with Discord
  </a>

  <!-- Register link -->
  <p class="text-white/70 text-sm mt-6">
    Donâ€™t have an account? 
    <a href="/register" class="text-white font-semibold hover:underline">Register</a>
  </p>
</div>
</body>
</html>
