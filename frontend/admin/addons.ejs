<!DOCTYPE html>
<html lang="en">
<%- include('../components/head') %>

<body class="<%= theme.background %> <%= theme.textColor %> font-[Figtree] min-h-screen flex">

  <!-- Sidebar -->
  <%- include('../components/admin_sidebar.ejs') %>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col">
    <!-- Navbar -->
    <%- include('../components/nav.ejs') %>

    <!-- Addons Content -->
    <main class="p-6 grid grid-cols-1 gap-6">
      <div class="<%= theme.buttonColor %> rounded-2xl p-6 shadow-lg border border-[#2a2a2a]">
        <h1 class="text-2xl font-bold text-white flex items-center gap-2 mb-4">
          <i data-lucide="package" class="w-6 h-6"></i>
          Manage Addons
        </h1>

        <div class="space-y-4">
          <% if (addons.length === 0) { %>
            <p class="text-gray-400">No addons installed.</p>
          <% } else { %>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
              <% addons.forEach(addon => { %>
                <div class="p-4 <%= theme.buttonColor %> rounded-xl border border-[#2a2a2a] shadow flex flex-col justify-between">
                  <div>
                    <h2 class="text-lg font-semibold text-white flex items-center gap-2">
                      <i data-lucide="puzzle" class="w-5 h-5"></i>
                      <%= addon.name %>
                    </h2>
                    <p class="text-gray-400 mt-1"><%= addon.description %></p>
                    <p class="text-gray-500 text-sm mt-2">
                      By <span class="text-green-400"><%= addon.author %></span>
                    </p>
                    <p class="text-gray-500 text-sm">Version: <%= addon.version %></p>
                  </div>

                  <!-- Enable/Disable buttons -->
                  <div class="mt-4 flex gap-2">
                    <% if (addon.status === "enabled") { %>
                      <a href="/admin/addon/<%= addon.folder %>/disable"
                         class="flex-1 text-center px-3 py-2 rounded-lg bg-red-600 hover:bg-red-500 text-white text-sm font-medium transition">
                         Disable
                      </a>
                    <% } else { %>
                      <a href="/admin/addon/<%= addon.folder %>/enable"
                         class="flex-1 text-center px-3 py-2 rounded-lg bg-green-600 hover:bg-green-500 text-white text-sm font-medium transition">
                         Enable
                      </a>
                    <% } %>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
        </div>
      </div>
    </main>
  </div>

  <script>
    lucide.createIcons();
  </script>
</body>
</html>
